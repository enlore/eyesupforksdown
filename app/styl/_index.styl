$header-font-color   = $white
$header-border-color = $brown

$services-bg = $brown
$services-fg = $white

$shadow-color = black

header
    background-image url('../images/hardwood_flatware.jpg')
    background-position center center
    background-attachment fixed
    color $header-font-color
    border-bottom 20px solid $header-border-color
    box-shadow($shadow-color)

    h1
        font-size 44px

section.intro
    h1
        font-size 38px

    p
        margin-top 30px

    .large
        font-size 2em

section.services
    padding-top 2em
    padding-bottom 2em

    background-color $services-bg
    color $services-fg

    box-shadow($shadow-color)

    .content
        padding-top 4em
        padding-bottom 4em
